{
    "name": "angular-view",
    "displayName": "angular-view",
    "description": "Allow to see angular component/html/css",
    "version": "0.0.1",
    "publisher": "anthony2856",
    "engines": {
        "vscode": "^1.18.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [{
            "command": "extension.sayHello",
            "title": "Hello World"
        }],
        "configuration": {
            "type": "object",
            "title": "Angular view settings",
            "properties": {
                "angularview.isactive": {
                    "type": "boolean",
                    "default": true,
                    "description": "Use to desactivate extension"
                },
                "angularview.displaycss": {
                    "type": "boolean",
                    "default": true,
                    "description": "Use to display or not the css file on component select"
                },
                "angularview.viewColumns": {
                    "type": "object",
                    "description": "Used to configure view columns for each file type",
                    "default": {
                        "ts": 1,
                        "html": 2,
                        "css": 3
                    },
                    "properties": {
                        "ts": {
                            "type": "number",
                            "default": 1
                        },
                        "html": {
                            "type": "number",
                            "default": 2
                        },
                        "css": {
                            "type": "number",
                            "default": 3
                        }
                    }
                }, 
                "angularview.switchon": {
                    "type": "array",
                    "default": ["ts", "html", "css"],
                    "description": "Use to select wich file type will fire event to display others files"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}